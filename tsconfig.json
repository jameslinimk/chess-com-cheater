{
	"compilerOptions": {
		"target": "ESNext",
		"watch": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"types": [
			"chrome"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"outDir": "temp",
		"allowSyntheticDefaultImports": true,
	},
	"exclude": [
		"node_modules",
		"dist",
		"temp"
	]
}
