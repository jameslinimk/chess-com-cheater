{
    "manifest_version": 2,
    "name": "Chess.com cheats",
    "version": "1.0",
    "description": "Runs a WASM Stockfish in your chess.com games. Displays the best moves (up to 5) and evaluation for the current board.",
    "browser_specific_settings": {
        "gecko": {
            "id": "chesscheater@gmail.com"
        }
    },
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png",
        "128": "icons/icon-128.png",
        "256": "icons/icon-256.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.chess.com/*"],
            "js": ["content.bundle.min.js"],
            "run_at": "document_end"
        }
    ]
}
